@model Zhankui_Wang_ProblemAssignment2.Models.ManageEnrollViewModel

<h2>Confirmation response</h2>

<p>You have been invited to enroll in the @Model.Course.Title course.</p>
<p>Hey @Model.Student.FullName, you have been invited to enroll in the @Model.Course.Title in room @Model.Course.ClassRoom starting on [Insert Start Date Here] with instructor @Model.Course.Instructor. We would be thrilled to have you join us, but ask that you confirm your enrollment!</p>

<form method="post" asp-action="EnrollmentConfirmation">
    <input type="hidden" asp-for="Student.StudentID" />
    <input type="hidden" asp-for="Course.CourseID" />
    <label>Do you want to enroll?</label>
    <div class="mt-3">
        <input type="radio" asp-for="IfEnroll" value="Enrolled" /> Yes
        <input type="radio" asp-for="IfEnroll" value="InvitationRejected" /> No
        <hr/>
        <span asp-validation-for="IfEnroll" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Submit response</button>
    </div>
</form>
